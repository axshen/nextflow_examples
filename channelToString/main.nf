#!/usr/bin/env nextflow

nextflow.enable.dsl = 2

// ----------------------------------------------------------------------------------------
// Processes
// ----------------------------------------------------------------------------------------

process printFiles {
    input:
        val files

    output:
        val files, emit: files
    
    script:
        """
        #!/bin/bash
        """    
}

// ----------------------------------------------------------------------------------------
// Workflow
// ----------------------------------------------------------------------------------------

workflow {
    files = Channel.fromPath("files/*.txt").collect()

    main:
        printFiles(files)
        printFiles.out.files.view()
}

// ----------------------------------------------------------------------------------------
