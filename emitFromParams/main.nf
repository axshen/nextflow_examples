#!/usr/bin/env nextflow

nextflow.enable.dsl = 2

// ----------------------------------------------------------------------------------------
// Processes
// ----------------------------------------------------------------------------------------

process generate {
    output:
        val "${params.path}/${params.filename}", emit: file
    
    script:
        """
        #!/bin/bash
        ls
        """    
}

// ----------------------------------------------------------------------------------------
// Workflow
// ----------------------------------------------------------------------------------------

workflow {
    main:
        generate()
        generate.out.file.view()
}

